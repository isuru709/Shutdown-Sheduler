<Window x:Class="ShutdownScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ISURU'S Shutdown Scheduler" Height="571.485" Width="823.317"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2F"
        FontFamily="Segoe UI Variable"
        FontWeight="SemiBold"
        Foreground="White"
        ResizeMode="NoResize" Icon="blue_shutdown_poweroff__12422.png">

    <Window.Resources>
        <!-- Floating Button Style -->
        <Style TargetType="Button" x:Key="FloatingButton">
            <Setter Property="Background" Value="#FF5F67EA"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#66000000" BlurRadius="12" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="18" Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2BC8D9"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FF2BC8D9" BlurRadius="2" ShadowDepth="0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Cancel Button Style (PURE RED on hover) -->
        <Style TargetType="Button" x:Key="CancelButtonRed">
            <Setter Property="Background" Value="#FFCC3333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#66000000" BlurRadius="12" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="18" Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF76E6E"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FFF76E6E" BlurRadius="2" ShadowDepth="0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Floating Panel Style -->
        <Style TargetType="Border" x:Key="FloatingPanel">
            <Setter Property="CornerRadius" Value="22"/>
            <Setter Property="Background" Value="#FF262845"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#66000000" BlurRadius="30" ShadowDepth="10"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Border Style="{StaticResource FloatingPanel}">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="🕒 Shutdown Scheduler"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,18"
                           HorizontalAlignment="Center"
                           Foreground="#FF5F67EA"/>

                <!-- Time Picker -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12" >
                    <TextBlock Text="Time:" VerticalAlignment="Center" FontSize="15" Margin="0,0,7,0" Width="50"/>
                    <ComboBox x:Name="MinuteBox" Width="159" Height="32" FontSize="20" 
                              Margin="4,0,0,0" Background="#FF353761" Foreground="DarkBlue" BorderBrush="Transparent" AutomationProperties.Name="MinuteBox" FontFamily="Arial" RenderTransformOrigin="0.5,0.5">
                        <ComboBox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="-4"/>
                            </TransformGroup>
                        </ComboBox.RenderTransform>
                    </ComboBox>
                </StackPanel>

                <!-- Action Selection -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12" RenderTransformOrigin="0.5,0.5">
                    <StackPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="39"/>
                        </TransformGroup>
                    </StackPanel.RenderTransform>
                    <RadioButton x:Name="ShutdownOption" Content="Shutdown" IsChecked="True"
                                 Foreground="White" Background="White" FontSize="15" Margin="0,0,12,0" Width="97"/>
                    <RadioButton x:Name="RestartOption" Content="Restart"
                                 Foreground="White" Background="White" FontSize="15" Margin="0,0,12,0" Width="74"/>
                    <RadioButton x:Name="SleepOption" Content="Sleep"
                                 Foreground="White" Background="White" FontSize="15" Width="78" Height="17" RenderTransformOrigin="0.5,0.5">
                        <RadioButton.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform Y="-1"/>
                            </TransformGroup>
                        </RadioButton.RenderTransform>
                    </RadioButton>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="209,0,152,10" Width="368" Height="74">
                    <Button x:Name="SetScheduleBtn" Content="Set Schedule" Width="120" Height="40"
                            Style="{StaticResource FloatingButton}" FontSize="15" RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="40"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <Button x:Name="CancelBtn" Content="Cancel" Width="120" Height="40"
                            Style="{StaticResource CancelButtonRed}" FontSize="15" RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="70"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                </StackPanel>

                <!-- Status -->
                <Border Background="#33000000" CornerRadius="10" Margin="0,10,0,0" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Next scheduled action:" FontSize="13" Foreground="#FFCCCCCC"/>
                        <TextBlock x:Name="StatusText" Text="None" FontSize="16" FontWeight="Bold" Foreground="#FF5F67EA"/>
                    </StackPanel>
                </Border>
                <TextBlock x:Name="Lable" TextWrapping="Wrap" Text="    Created by ISURU" Height="35" Margin="-19,0,0,0" HorizontalAlignment="Left" Width="133" RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform X="632" Y="162"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>

</Window>